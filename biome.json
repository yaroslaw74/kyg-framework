{
    "files": {
        "includes": [
            "**",
            "!assets/fonts/*",
            "!assets/icon-fonts/",
            "!assets/icons/*",
            "!assets/images/*",
            "!assets/vendor/*",
            "!assets/controllers.json",
            "!public/assets/*",
            "!public/bundles/*",
            "!tests/*",
            "!var/*",
            "!vendor/*",
            "!composer.json"
        ]
    },
    "formatter": {
        "lineWidth": 256,
        "useEditorconfig": true
    },
    "javascript": {
        "formatter": {
            "arrowParentheses": "always",
            "bracketSameLine": false,
            "bracketSpacing": true,
            "jsxQuoteStyle": "double",
            "quoteProperties": "asNeeded",
            "semicolons": "always",
            "trailingCommas": "none"
        }
    },
    "json": {
        "formatter": {
            "trailingCommas": "none"
        }
    }
}
