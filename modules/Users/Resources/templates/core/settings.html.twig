{% extends 'empty.html.twig' %}
{% trans_default_domain 'users' %}
{% form_theme LangugeForm 'bootstrap_5_layout.html.twig' %}

{% block page_header %}
    {{ include('partials/page-header.html.twig', {title: 'Settings'|trans, subtitle: 'Users'|trans}) }}
{% endblock %}

{% block body_javascript %}
    <!-- Scroll JS -->
    <script src="{{ asset('js/scroll.js') }}"></script>
{% endblock %}

{% block body_content %}
    <!-- Start::row-1 -->
    <div class="row">
        <div class="col-lg-4 col-xl-3">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">{% trans %}SETTINGS{% endtrans %}</div>
                </div>
                <div class="main-content-left main-content-left-mail card-body pt-0">
                    <div class="main-settings-menu">
                        <nav class="nav main-nav-column">
                            <a class="nav-link border-top-0 thumb mb-2" href="javascript:void(0);" id="selector1"><i class="fe fe-home"></i>{% trans %}Main{% endtrans %}</a>
                            <a class="nav-link border-top-0 thumb mb-2" href="javascript:void(0);" id="selector2"><i class="fe fe-grid"></i> Web Apps</a>
                            <a class="nav-link border-top-0 thumb mb-2" href="javascript:void(0);" id="selector3"><i class="fe fe-server"></i> General</a>
                            <a class="nav-link border-top-0 thumb mb-2" href="javascript:void(0);" id="selector4"><i class="fe fe-globe"></i> Components</a>
                            <a class="nav-link border-top-0 thumb mb-2" href="javascript:void(0);" id="selector5"><i class="fe fe-layers"></i> Pages</a>
                            <a class="nav-link border-top-0 thumb mb-2" href="javascript:void(0);" id="selector6"><i class="fe fe-flag"></i>{% trans %}Language and Region{% endtrans %}</a>
                            <a class="nav-link border-top-0 thumb mb-2" href="javascript:void(0);" id="selector7"><i class="fe fe-bell"></i> Notifications</a>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-8 col-xl-9">
            <div class="card custom-card">
                <div class="card-header d-block">
                    <div class="card-title mb-2">{% trans %}Overview{% endtrans %}</div>
                    <p>{% trans %}Used to customize and manage all settings about User{% endtrans %}</p>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 col-xl-6 col-md-12 col-sm-12 p-2" id="target_selector1">
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="d-flex">
                                        <div class="settings-main-icon me-4 mt-1 flex-shrink-0"><i class="fe fe-home"></i></div>
                                        <div>
                                            <p class="fs-20 fw-medium d-flex mb-0">{% trans %}Dashboard{% endtrans %}</p>
                                            <p class="fs-13 text-muted mb-0">{% trans %}Dashboard Settings such as sidemenu, header and main page can be Controlled.{% endtrans %}</p>
                                        </div>
                                    </div>
                                </div>
                             </div>
                        </div>
                        <div class="card-footer p-3">
                            <a href="javascript:void(0);" class="fs-14 mb-0 text-primary">{% trans %}Go to Settings{% endtrans %}</a>
                            <label class="form-switch float-end mb-0">
                                <a href="javascript:void(0);" class="fs-14 mb-0 me-2 text-primary">{% trans %}Restore default{% endtrans %}</a>
                                <input type="checkbox" name="form-switch-checkbox3" class="form-switch-input">
                                <span class="form-switch-indicator custom-radius"></span>
                            </label>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12 col-xl-6 col-md-12 col-sm-12 p-2" id="target_selector2">
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="d-flex">
                                        <div class="settings-main-icon me-4 mt-1 flex-shrink-0"><i class="fe fe-grid"></i></div>
                                        <div>
                                            <p class="fs-20 fw-medium d-flex mb-0">Webapps</p>
                                            <p class="fs-13 text-muted mb-0">Web apps settings such as Apps,Elements,Advanced Ui & Mail can be Controlled.</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer p-3">
                            <a href="javascript:void(0);" class="fs-14 mb-0 text-primary">Go to Settings</a>
                            <label class="form-switch float-end mb-0">
                                <a href="javascript:void(0);" class="fs-14 mb-0 me-2 text-primary">Restore default</a>
                                <input type="checkbox" name="form-switch-checkbox3" class="form-switch-input">
                                <span class="form-switch-indicator custom-radius"></span>
                            </label>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12 col-xl-6 col-md-12 col-sm-12 p-2" id="target_selector3">
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="d-flex">
                                        <div class="settings-main-icon me-4 mt-1 flex-shrink-0"><i class="fe fe-server"></i></div>
                                        <div>
                                            <p class="fs-20 fw-medium d-flex mb-0">General</p>
                                            <p class="fs-13 text-muted mb-0">General settings such as Icons,Charts,Ecommerce can be Controlled.</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer p-3">
                            <a href="javascript:void(0);" class="fs-14 mb-0 text-primary">Go to Settings</a>
                            <label class="form-switch float-end mb-0">
                                <a href="javascript:void(0);" class="fs-14 mb-0 me-2 text-primary">Restore default</a>
                                <input type="checkbox" name="form-switch-checkbox3" class="form-switch-input" checked="">
                                <span class="form-switch-indicator custom-radius"></span>
                            </label>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12 col-xl-6 col-md-12 col-sm-12 p-2" id="target_selector4">
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="d-flex">
                                        <div class="settings-main-icon me-4 mt-1 flex-shrink-0"><i class="fe fe-flag"></i></div>
                                        <div>
                                            <p class="fs-20 fw-medium d-flex mb-0">{% trans %}Region and Language{% endtrans %}</p>
                                            <p class="fs-13 text-muted mb-0">{% trans %}In this settings we can change the region and language manually.{% endtrans %}</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer p-3">
                            <a href="javascript:void(0);" class="fs-14 mb-0 text-primary" data-bs-toggle="modal" data-bs-target="#languageModal">{% trans %}Go to Settings{% endtrans %}</a>
                            <label class="form-switch float-end mb-0">
                                <a href="javascript:void(0);" class="fs-14 mb-0 me-2 text-primary">{% trans %}Restore default{% endtrans %}</a>
                                <input type="checkbox" name="form-switch-checkbox3" class="form-switch-input">
                                <span class="form-switch-indicator custom-radius"></span>
                            </label>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12 col-xl-6 col-md-12 col-sm-12 p-2" id="target_selector5">
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="d-flex">
                                        <div class="settings-main-icon me-4 mt-1 flex-shrink-0"><i class="fe fe-bell"></i></div>
                                        <div>
                                            <p class="fs-20 fw-medium d-flex mb-0">Notifiation</p>
                                            <p class="fs-13 text-muted mb-0">Notification settings we can control the notification privacy and security.</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer p-3">
                            <a href="javascript:void(0);" class="fs-14 mb-0 text-primary">Go to Settings</a>
                            <label class="form-switch float-end mb-0">
                                <a href="javascript:void(0);" class="fs-14 mb-0 me-2 text-primary">Restore default</a>
                                <input type="checkbox" name="form-switch-checkbox3" class="form-switch-input">
                                <span class="form-switch-indicator custom-radius"></span>
                            </label>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12 col-xl-6 col-md-12 col-sm-12 p-2" id="target_selector6">
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="d-flex">
                                        <div class="settings-main-icon me-4 mt-1 flex-shrink-0"><i class="fe fe-settings"></i></div>
                                        <div>
                                            <p class="fs-20 fw-medium d-flex mb-0">Blog</p>
                                            <p class="fs-13 text-muted mb-0">In this settings we can modify all Blog related settings in this template.</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer p-3">
                            <a href="javascript:void(0);" class="fs-14 mb-0 text-primary">Go to Settings</a>
                            <label class="form-switch float-end mb-0">
                                <a href="javascript:void(0);" class="fs-14 mb-0 me-2 text-primary">Restore default</a>
                                <input type="checkbox" name="form-switch-checkbox3" class="form-switch-input" checked="">
                                <span class="form-switch-indicator custom-radius"></span>
                            </label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--End::row-1 -->

    <!-- Modal start -->
    <div class="modal modal-xl fade" id="languageModal" tabindex="-1" role="dialog" aria-labelledby="languageModalModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                        <h6 class="modal-title" id="languageModalLabel">{% trans %}Region and Language{% endtrans %}</h6>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="card">
                        <div class="card-body">
                            <div class="main-signup-header mt-3">
                                {{ form_start(LangugeForm) }}
                                    {{ form_row(LangugeForm.locale) }}
                                    {{ form_row(LangugeForm.timezone) }}
                                    <button type="submit" class="btn btn-primary btn-block w-100 mt-3 mb-3">{% trans %}Set Region and Language{% endtrans %}</button>
                                {{ form_end(LangugeForm) }}
                            </div>
                        </div>
                    </div>
                    <!-- card -->
                </div>
                <!-- modal-body -->
            </div>
            <!-- modal-content -->
        </div>
        <!-- modal-dialog -->
    </div>
    <!-- Modal end -->
{% endblock body_content %}
